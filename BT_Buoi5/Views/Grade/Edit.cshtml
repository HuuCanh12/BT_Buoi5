<!-- Views/Grade/Edit.cshtml -->
@model Grade

@{
    ViewData["Title"] = "Chỉnh sửa lớp học";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger" role="alert"></div>

            <input type="hidden" asp-for="GradeId" />

            <div class="form-group mb-3">
                <label asp-for="GradeName" class="form-label">Tên lớp học</label>
                <input asp-for="GradeName" class="form-control" />
                <span asp-validation-for="GradeName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
