<!-- Views/Grade/Details.cshtml - Cập nhật để hiển thị danh sách học sinh -->
@model Grade

@{
    ViewData["Title"] = "Chi tiết lớp học";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-header">
        <h4>@Model.GradeName</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID lớp:</dt>
            <dd class="col-sm-9">@Model.GradeId</dd>

            <dt class="col-sm-3">Tên lớp:</dt>
            <dd class="col-sm-9">@Model.GradeName</dd>

            <dt class="col-sm-3">Số học sinh:</dt>
            <dd class="col-sm-9">
                <span class="badge bg-primary">@Model.Students.Count</span>
            </dd>
        </dl>
    </div>
</div>

@if (Model.Students.Any())
{
    <div class="card mt-3">
        <div class="card-header">
            <h5>Danh sách học sinh</h5>
        </div>
        <div class="card-body">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Họ</th>
                        <th>Tên</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model.Students)
                    {
                        <tr>
                            <td>@student.StudentId</td>
                            <td>@student.FirstName</td>
                            <td>@student.LastName</td>
                            <td>
                                <a asp-controller="Student" asp-action="Details" asp-route-id="@student.StudentId"
                                    class="btn btn-sm btn-outline-info">Chi tiết</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.GradeId" class="btn btn-warning">Chỉnh sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>
